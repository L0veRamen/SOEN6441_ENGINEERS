# Routes NotiLytics
# This file defines all application routes (Higher priority routes first)
# ~~~~

# ==================== GROUP ROUTES ====================

# ===== Home (canonical) =====
GET   /               controllers.HomeController.index(request: play.mvc.Http.Request)
GET   /Notilytics     controllers.HomeController.index(request: play.mvc.Http.Request)

# ===== Search (reads q & sortBy from query string) =====
GET   /notilytics     controllers.HomeController.search(request: play.mvc.Http.Request)


# ==================== INDIVIDUAL TASK ROUTES (PLACEHOLDERS) ====================

# Individual A: Source Profile
GET     /source/:id                  controllers.HomeController.source(request: play.mvc.Http.Request, id: String)

# Individual B: Word Statistics
GET     /wordstats                   controllers.HomeController.wordStats(request: play.mvc.Http.Request, q: String)

# Individual C: News Sources
GET     /sources                     controllers.HomeController.sources(request: play.mvc.Http.Request, country: String ?= "", category: String ?= "", language: String ?= "")

# ==================== D2 ROUTES (NEW) ====================

# WebSocket endpoint for real-time updates
GET     /ws                  controllers.HomeController.socket()


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)